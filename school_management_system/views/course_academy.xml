<?xml version ="1.0" encoding ="utf-8"?>
<odoo>

    <!--tree-->
    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">course.academy.tree</field>
        <field name="model">course.academy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>


    <!--form -->
    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.academy.form</field>
        <field name="model">course.academy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="teacher_ids" widget="many2many_tags"/>
                        <field name="student" widget="many2many_tags"/>

                    </group>

<!--                    <notebook>-->
<!--                        <page string="course  page" name="teacher_ids">-->
<!--                            <field name="teacher_ids">-->
<!--                                <tree editable="bottom">-->
<!--                                    <field name="course_ref"/>-->
<!--                                </tree>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                    </notebook>-->

                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="view_course_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">course.academy</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_no content_smiling_face">
                Welcome School Management System !!!
                choose your first course
            </p>
        </field>
    </record>
</odoo>
