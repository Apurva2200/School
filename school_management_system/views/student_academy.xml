<?xml version ="1.0" encoding ="utf-8"?>
<odoo>

    <!--tree-->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.academy.tree</field>
        <field name="model">student.academy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="roll_no"/>
                <field name="name"/>
                <field name="gender"/>
                <field name="date_of_birth"/>
                <field name="e_mail" optional="show"/>
                <field name="mobile"/>
                <field name="enrolled_course"/>
                <field name="another_course"  widget="many2many_tags"/>
            </tree>
        </field>
    </record>


    <!--form -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.academy.form</field>
        <field name="model">student.academy</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <field name="roll_no"/>
                            <field name="name"/>
                            <field name="enrolled_course"/>
                            <field name="another_course" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="e_mail" optional="show"/>
                            <field name="mobile"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="view_student_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.academy</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_no content_smiling_face">
                Welcome School Management System !!!
                create your first student
            </p>
        </field>
    </record>
</odoo>
